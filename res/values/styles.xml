<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/color_book_04</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="mainTitleBackground">
        <item name="android:background">#003f97</item>
    </style>

    <style name="mainTitleBar" parent="android:Theme">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/mainTitleBackground</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MyPopupMenuLargeText</item>
    </style>

    <style name="MyPopupMenuLargeText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/item_unpressed</item>
    </style>

    <style name="MyPopupMenu">
        <item name="android:popupBackground">@color/item_text</item>
    </style>

    <style name="biglisttext">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#003f97</item>
    </style>

    <style name="largetext">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#003f97</item>
    </style>

    <style name="midtext">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#003f97</item>
    </style>

    <style name="smalltext">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#003f97</item>
    </style>


    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ht_test_button_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>

    </style>

    <style name="maintenance_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_listview_item</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mode_choose_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="mode_choose_gou_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="mode_choose_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_listview_item</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ct_copy_situation_click_layout_style">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/bg_item02</item>
    </style>

    <style name="ct_copy_situation_click_imageview_style">
        <item name="android:layout_width">@dimen/button_height</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="rv_item_style_01">
        <!--android:singleLine="true"-->
        <!--android:ellipsize="marquee"-->
        <!--android:marqueeRepeatLimit="marquee_forever"-->
        <!--<item name="android:ellipsize">marquee</item>-->
        <!--<item name="android:marqueeRepeatLimit">marquee_forever</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
