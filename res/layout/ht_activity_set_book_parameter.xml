<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_bar_style" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="扩频信道(00~27):"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etKuoPinXinDao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:text="10"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="扩频因子(07~12):"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etKuoPinYinZi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:text="09"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="设置冻结日:"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etSheZhiDongJieRi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:text="0000"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="开窗起止时间:"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etKaiChuangShiJian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:text="0000"
        android:textColor="@color/color_black"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/rbNeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="是否设置扩频因子"
        android:textSize="14sp" />

    <Button
        android:theme="@style/button_style"
        android:id="@+id/btSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="确定"
        android:textColor="@color/color_white"
        android:textSize="14sp" />
</LinearLayout>