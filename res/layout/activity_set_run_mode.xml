<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include layout="@layout/title_bar_style" />

    <LinearLayout
        android:id="@+id/linRunModeStandard"
        style="@style/mode_choose_layout_style">


        <TextView
            style="@style/mode_choose_text_style"
            android:text="混合模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipStandard"
            style="@style/mode_choose_gou_style"
            android:text="√" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />


    <LinearLayout
        android:id="@+id/linRunModeLORA"
        style="@style/mode_choose_layout_style">


        <TextView

            style="@style/mode_choose_text_style"
            android:text="LORA模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipLORA"
            style="@style/mode_choose_gou_style"
            android:text="√" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:id="@+id/linRunModeFSK"
        style="@style/mode_choose_layout_style">


        <TextView

            style="@style/mode_choose_text_style"
            android:text="FSK模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipFSK"
            style="@style/mode_choose_gou_style"
            android:text="√" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:id="@+id/linRunModeHuiZhou"
        style="@style/mode_choose_layout_style">


        <TextView

            style="@style/mode_choose_text_style"
            android:text="惠州模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipHuiZhou"
            style="@style/mode_choose_gou_style"
            android:text="√" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:id="@+id/linRunModeShangHai"
        style="@style/mode_choose_layout_style">


        <TextView

            style="@style/mode_choose_text_style"
            android:text="上海模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipShangHai"
            style="@style/mode_choose_gou_style"
            android:text="√" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:id="@+id/linRunModePhoto"
        style="@style/mode_choose_layout_style">


        <TextView

            style="@style/mode_choose_text_style"
            android:text="摄像表模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipPhoto"
            style="@style/mode_choose_gou_style"
            android:text="√" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:id="@+id/linRunModeZHGT"
        style="@style/mode_choose_layout_style">

        <TextView
            style="@style/mode_choose_text_style"
            android:text="港泰新模式" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvRunModeTipZHGT"


            style="@style/mode_choose_gou_style"
            android:text="√" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutModeChooseHt"
        style="@style/mode_choose_layout_style">

        <TextView
            style="@style/mode_choose_text_style"
            android:text="杭天模式" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="扩频因子:"
            android:textColor="@color/color_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvYinZi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="09"
            android:textColor="@color/color_blue"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="扩频信道:"
            android:textColor="@color/color_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvXinDao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="14"
            android:textColor="@color/color_blue"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvModeChooseHt"
            style="@style/mode_choose_gou_style"
            android:text="√" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/item_line" />


</LinearLayout>
