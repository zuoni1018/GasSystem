<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:layout_gravity="center" android:gravity="center"
    android:background="@drawable/bg_listview_item"  android:paddingTop="10dp"
        android:paddingBottom="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:orientation="horizontal" 
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:gravity="center_vertical"
            android:text="表具编号："
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCopyDataMeterNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:gravity="center_vertical"
            android:textColor="@color/item_text"
             android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="表具名称："
            android:textColor="#000000"
             android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCopyDataMeterName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:gravity="center_vertical"
            android:textColor="@color/item_text"
             android:textSize="12sp" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             android:layout_marginLeft="5sp"
            android:gravity="center_vertical"
            android:text="本次读数："
            android:textColor="#000000"
             android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCopyDataCurrentShow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:gravity="center_vertical"
            android:textColor="@color/item_text"
             android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="本次用量："
            android:textColor="#000000"
             android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCopyDataCurrentDosage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:gravity="center_vertical"
            android:textColor="@color/item_text"
             android:textSize="12sp" />
    </LinearLayout>
    
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:orientation="horizontal" >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5sp"
            android:gravity="center_vertical"
            android:text="抄表状态："
            android:textColor="#000000"
             android:textSize="14sp" />

             <TextView
            android:id="@+id/tvCopyDataCopyState"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:gravity="center_vertical"
            android:textColor="@color/item_text"
             android:textSize="12sp" />

        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="抄表时间："
            android:textColor="#000000"
             android:textSize="14sp" />

             <TextView
            android:id="@+id/tvCopyDataCopyTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.42"
            android:gravity="center_vertical"
            android:textColor="@color/item_text"
             android:textSize="12sp" />

        

    </LinearLayout>
    
</LinearLayout>
