<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true" >

    <alpha
        android:duration="100"
        android:fillAfter="true"
        android:fromAlpha="0.6"
        android:toAlpha="1" >
    </alpha>

    <scale
        android:duration="100"
        android:fillAfter="true"
        android:fromXScale="0.98"
        android:fromYScale="0.98"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" >
    </scale>

</set>